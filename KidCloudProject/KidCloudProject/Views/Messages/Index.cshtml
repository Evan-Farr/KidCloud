@model IEnumerable<Twilio.Rest.Chat.V2.Service.Channel.MessageResource>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="">
    <div class="messages-container">
        <div class="messages" id="messages">
            @foreach (var m in Model)
            {
                <div class="message" id="@m.Sid">
                    <div class="message-icon">

                    </div>
                    <div class="message-body">
                        <div class="message-info"><strong>@m.From</strong> <small>@m.DateCreated</small></div>
                        <div class="message-text">@m.Body</div>
                    </div>
                </div>
            }
        </div>

        @using (Html.BeginForm("Index", "Messages", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="input-group">
                @Html.TextBox("body", null, new { @class = "form-control border-top-radius-none width-100", @id = "messageInput" })
                <span class="input-group-btn">
                    <input class="btn btn-default border-top-radius-none" type="submit" value="Send">
                </span>
            </div>
        }
    </div>
</div>
<script>
    var messages = document.getElementById("messages");
    messages.scrollTop = messages.scrollHeight;

    var messageInput = document.getElementById("messageInput");
    messageInput.value = "";
    messageInput.focus();
    
</script>